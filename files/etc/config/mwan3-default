config globals 'globals'
	option mmx_mask '0x3F00'
	option rtmon_interval '5'
	option local_source 'lan'

config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config member 'wan6_m1_w3'
	option interface 'wan6'
	option metric '1'
	option weight '3'

config policy 'balanced'
	option last_resort 'default'
	list use_member 'wan_m1_w3'
	list use_member 'wan6_m1_w3'
	list use_member 'wwan5g_m10_w3'
	list use_member 'wwan5gv6_m10_w3'
	list use_member 'wwanlte_m10_w3'
	list use_member 'wwanltev6_m10_w3'


config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'

config interface 'wan'
	option enabled '1'
	option initial_state 'offline'
	option family 'ipv4'
	list track_ip '1.1.1.1'
	list track_ip '114.114.114.114'
	list track_ip '223.5.5.5'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option check_quality '0'
	option timeout '4'
	option interval '5'
	option failure_interval '5'
	option recovery_interval '5'
	option down '6'
	option up '3'
	option flush_conntrack 'always'
	
